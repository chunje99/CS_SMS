                                Grid.Column="8" VerticalAlignment="Center"/>
                        </Grid>
                        <ListView Grid.Row="2"  x:Name="RemainData" ItemsSource="{x:Bind remainList, Mode=OneWay}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="CS_SMS_LIB:PListData">
                                    <Grid Background="{x:Bind highlight}">
                                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
